{% extends 'base.html.twig' %}

{% block content %}
    {% for book in books %}

        <article class="book">

            <h3 class="book_title">{{ book.title }}</h3>

            {% if book.author is not null %}

                <p class="book_author">{{ book.author.firstName }}</p>

            {% else %}

                <p>Auteur non renseign√©</p>

            {% endif %}

        </article>

    {% endfor %}

{% endblock %}
